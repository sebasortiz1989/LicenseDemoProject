                                    Height="20"
                                    IsVisible="False"
                                    Margin="20,20,20,0"
                                    Name="NotificationIcon"
                                    VerticalAlignment="Top"
                                    Width="20" />
                                <ContentControl
                                    Content="{TemplateBinding Content}"
                                    MinHeight="64"
                                    Name="PART_Content">
                                    <ContentControl.DataTemplates>
                                        <DataTemplate DataType="INotification">
                                            <StackPanel
                                                Margin="0,20,20,20"
                                                Spacing="8"
                                                Width="360">
                                                <TextBlock
                                                    FontSize="18"
                                                    FontWeight="600"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    Text="{Binding Title}" />
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="400"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    Margin="0,0,8,0"
                                                    MaxHeight="80"
                                                    Text="{Binding Message}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                        </DataTemplate>
                                        <DataTemplate DataType="x:String">
                                            <TextBlock
                                                Margin="12"
                                                Text="{Binding}"
                                                TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </ContentControl.DataTemplates>
                                </ContentControl>
                                <Button
                                    Height="20"
                                    Margin="20,20,20,0"
                                    Name="CloseButton"
                                    VerticalAlignment="Top"
                                    Width="20">
